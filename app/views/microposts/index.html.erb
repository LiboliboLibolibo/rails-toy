<p id="notice"><%= notice %></p>

<h1>我的微博</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th>用户</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to '展开', micropost %></td>
        <td><%= link_to '编辑', edit_micropost_path(micropost) %></td>
        <td><%= link_to '删除', micropost, method: :delete, data: { confirm: '确认删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

